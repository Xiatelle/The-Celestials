<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".Mars">

    <ImageView
        android:id="@+id/mars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/mars_big" />

    <TextView
        android:id="@+id/marsNameSpace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="374dp"
        android:fontFamily="@font/jelle"
        android:text="@string/mars"
        android:textColor="@color/orange"
        android:textSize="60sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/marsDialogSpace"
        android:layout_width="324dp"
        android:layout_height="332dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="17dp"
        android:fontFamily="@font/jelle"
        android:text="@string/mars_dialog"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <ImageButton
        android:id = "@+id/rocketShip"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/rocket_ship"
        android:visibility="gone"/>


</RelativeLayout>