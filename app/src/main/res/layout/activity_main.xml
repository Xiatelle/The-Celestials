<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".IntroThree">

    <ImageView
        android:id="@+id/smallSun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/planets"
        android:src="@drawable/sun_small" />

        <ImageView
        android:id = "@+id/smallMercury"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/mercury_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id = "@+id/smallVenus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/venus_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id = "@+id/smallEarth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/earth_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id = "@+id/smallMars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/mars_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id = "@+id/smallJupiter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/jupiter_small"
        android:contentDescription="@string/planets" />


    <ImageView
        android:id = "@+id/smallSaturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/saturn_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id = "@+id/smallUranus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/uranus_small"
        android:contentDescription="@string/planets" />

    <ImageView
        android:id="@+id/smallNeptune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/planets"
        android:src="@drawable/neptune_small" />


</RelativeLayout>