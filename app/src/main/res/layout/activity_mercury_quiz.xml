<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_bg"
    tools:context=".MercuryQuiz">

    <TextView
        android:id="@+id/mercuryQuizSpace"
        android:layout_width="293dp"
        android:layout_height="222dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="167dp"
        android:fontFamily="@font/jelle"
        android:text="@string/mercury_quiz"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="35sp"
        android:visibility="invisible"/>

    <!-- Option A -->

    <ImageView
        android:id="@+id/choiceAImage"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:src="@drawable/quiz_1_btn_a"
        android:layout_below="@id/mercuryQuizSpace"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/optionOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceAImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="-65dp"
        android:fontFamily="@font/jelle"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="40sp"
        android:visibility="invisible"/>
    <!-- Option B -->

    <ImageView
        android:id="@+id/choiceBImage"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/optionOne"
        android:layout_alignParentStart="true"
        android:layout_marginTop="90dp"
        android:src="@drawable/quiz_1_btn_b"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/optionTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/choiceBImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="-63dp"
        android:fontFamily="@font/jelle"
        android:text=""
        android:textColor="@color/dark_blue"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/quizRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/sun_quiz_1_correct"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/quizWrong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/optionTwo"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-2dp"
        android:src="@drawable/sun_quiz_1_wrong"
        android:visibility="gone" />
</RelativeLayout>
